# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/smsbridge

# Redis
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-production-secret-key
ALLOWED_HOSTS=smsbridge.example.com
CORS_ORIGINS=https://smsbridge.example.com

# SMS Hub
SMSHUB_API_KEY=your-smshub-api-key
SMSHUB_BASE_URL=https://api.smshub.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/smsbridge.log

# Device Settings
DEVICE_SCAN_INTERVAL=5
MESSAGE_CHECK_INTERVAL=10
MAX_RETRY_ATTEMPTS=3

# Backup Settings
ENABLE_BACKUP=true
BACKUP_INTERVAL=24
BACKUP_LOCATION=/app/backups 